library(ggplot2)

# Load Iris dataset
data <- iris

# Scale the features (excluding the Species column)
data_scaled <- scale(data[,-5])

# Set random seed for reproducibility
set.seed(123)

# Define the number of clusters
k <- 3

# Perform K-Means clustering
kmeans_result <- kmeans(data_scaled, centers = k, nstart = 25)

# Add the cluster assignments to the original data
data$cluster <- as.factor(kmeans_result$cluster)

# Visualize the clusters using ggplot2
ggplot(data, aes(x = Sepal.Length, y = Sepal.Width, color = cluster)) +
  geom_point(size = 3) +
  ggtitle("K-Means Clustering on Iris Dataset") +
  theme_minimal()

