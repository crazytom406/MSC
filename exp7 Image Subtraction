% Load built-in MATLAB images 
I1 = imread('cameraman.tif'); 
I2 = imread('peppers.png'); 
% Convert images to double precision for calculations 
I1_double = double(I1); 
I2_double = double(I2); 
% Ensure both images have the same size 
[rows, cols, ~] = size(I1); 
I2_resized = imresize(I2_double, [rows, cols]); 
% Perform image subtraction 
I_subtracted = abs(I1_double - I2_resized); % Take absolute difference 
% Display original images and subtracted image 
subplot(1, 3, 1); 
imshow(I1); 
title('Image 1'); 
subplot(1, 3, 2); 
imshow(I2_resized); 
title('Image 2 (Resized)'); 
subplot(1, 3, 3); 
imshow(uint8(I_subtracted)); 
title('Subtracted Image'); 
